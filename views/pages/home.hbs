<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1>Weather Forecast</h1>
			<h2>USA</h2>
			<br/><br/>
			<div id="form" class="row">
				<div class="col-xs-9">
					<input type="text" class="form-control" placeholder="Enter State Code, eg: CA" />
				</div>
				<div class="col-xs-3">
					<button class="btn btn-default btn-block">Search</button>
				</div>
			</div>


			<hr/><br/>
			<div id="city"></div>
			<script id="stats-template" type="text/x-handlebars-template">
				<h4>City: {{city}}</h4>
			</script>
				<br/><br/>
			<table class="table">
				<thead>
					<tr>
						<th>Date</th>
						<th>Low</th>
						<th>High</th>
						<th>Text</th>
					</tr>
				</thead>
				<tbody id="details">
					<script id="details-template" type="text/x-handlebars-template">
						{{#each forecast}}
						<tr>
							<td>{{date}}</td>
							<td>{{low}}</td>
							<td>{{high}}</td>
							<td>{{text}}</td>
						</tr>
						{{/each}}
					</script>
				</tbody>
			</table>

		</div>
	</div>
</div>


